{
  "plugins": [
    "prettier-plugin-go-template"
  ],

  "trailingComma": "es5",
  "semi": true,
  "singleQuote": true,

  "overrides": [
    {
      "files": "*.md",
      "options": {
        "singleQuote": false
      }
    },

    {
      "files": [
        "*.html"
      ],
      "options": {
        "parser": "go-template",
        "goTemplateBracketSpacing": true,
        "bracketSameLine": false
      }
    }
  ]
}
